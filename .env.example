# Instagram Credentials for Instagrapi
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password

# Facebook/Instagram Graph API Credentials
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
INSTAGRAM_ACCESS_TOKEN=your_long_lived_access_token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_account_id

# AI/LLM API Keys
OPENROUTER_API_KEY=your_openrouter_api_key
LLM_MODEL=openrouter/sonoma-sky-alpha
# Alternative: OPENAI_API_KEY=your_openai_api_key

# Web Scraping API (Firecrawl v2.2.0 with all features)
FIRECRAWL_API_KEY=fc-bb8e983536794db9ad2fc7bca745caa5
FIRECRAWL_BASE_URL=https://api.firecrawl.dev
FIRECRAWL_MAX_PAGES=100000
FIRECRAWL_PDF_MAX_PAGES=100
FIRECRAWL_CONCURRENT_REQUESTS=10
FIRECRAWL_TIMEOUT=60
FIRECRAWL_DEFAULT_FORMATS=markdown,html

# Firecrawl Feature Flags
FEATURE_FIRECRAWL=true

# Database Configuration (PostgreSQL recommended for production)
DATABASE_URL=postgresql://iram:password@localhost:5432/iram_dev
# For development: DATABASE_URL=sqlite:///./iram.db

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
# For cloud Redis: REDIS_URL=redis://:password@host:port/db
REDIS_MAX_CONNECTIONS=10
REDIS_DEFAULT_TTL=3600
REDIS_SESSION_TTL=86400

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_HOUR=200

# Proxy Configuration (optional)
PROXY_ENABLED=false
PROXY_URL=http://your-proxy-url:port

# Feature Flags
FEATURE_BACKGROUND_JOBS=true
FEATURE_SCHEDULING=true
FEATURE_RATE_LIMITING=true
FEATURE_SENTIMENT_ANALYSIS=true

# Security
SECRET_KEY=your-secret-key-here

# Application Settings
ENVIRONMENT=development
VERSION=1.0.0
